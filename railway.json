{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "mvn clean package -DskipTests"
    },
    "deploy": {
        "startCommand": "java -Xmx300m -Xms200m -Xss512k -XX:+UseSerialGC -XX:MaxMetaspaceSize=128m -XX:CompressedClassSpaceSize=32m -XX:ReservedCodeCacheSize=32m -XX:+TieredCompilation -XX:TieredStopAtLevel=1 -Xshare:auto -XX:+UseStringDeduplication -Djava.awt.headless=true -Dspring.main.lazy-initialization=true -Dserver.port=${PORT} -jar target/*.jar",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 5
    }
}